<%action = band.persisted? ? band_url(band) : band_url %>
<%method = band.persisted? ? 'PATCH' : 'POST'%>

<form action="<%=action%>" method ="POST">
  <input type="hidden" name='_method' method ="<%=method%>">

  <% auth_token %>

  <label for="band_name">Band Name</label>
    <input type='text'
     name='band[name]'
     id='band_name'
     value='<%= band.name%>'
     >

  <% submit_text = band.persisted? ? 'Edit Band' : 'Submit Band' %>

  <input type='submit' value='<%=submit_text%>'>
</form>
